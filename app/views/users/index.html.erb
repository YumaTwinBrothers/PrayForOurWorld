<h2>showing all users</h2>

<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="user-title"><%= link_to user.username.capitalize, user_path(user) %></li>
          <li><small><%= pluralize(user.blogs.count, "blog") if user.blogs %></small></li>
          <li><%= link_to "Delete this user", user_path(user), method: :delete,
                  data: {confirm: "Are you sure you want to delete the user and all associated articles?"} %></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
